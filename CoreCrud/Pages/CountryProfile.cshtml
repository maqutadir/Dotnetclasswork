@page
@model CountryProfileModel
@{
}

<h1>Country Profile</h1>
<h2 class="text-center text-success">@Model.Country.Name</h2>
<div class="row">
    
    <div class="col-md-6">
        <h3>Country Details</h3>
        <dl>
            <dd>Name</dd>
            
            <dt>
                @if(Model.Country.Name == "India")
                {
                    <text>Bharat</text>
                } else if(Model.Country.Name == "USA"){
                    <text>United States Of America</text>
                } else {
                @Model.Country.Name
                }
            </dt>
        </dl>
        
    </div>
    <div class="col-md-6">
        <h3>Destinations</h3>
        <ul>
            @foreach(var destination in Model.Country.Destinations) {
                <li>
                    Name=@destination.Name
                    CurrentTemp=@destination.CurrentTemp
                    TypeOfDestination=@destination.TypeOfDestination
                    AverageRainfall=@destination.AverageRainfall
                    IsSafe=@destination.IsSafe
                    DateOfLastRainfall=@destination.DateOfLastRainfall
                    Country=@destination.Country

                </li>
            }
        </ul>
    </div>
</div>


