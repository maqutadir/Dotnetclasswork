@page
@model MoviesApp.Pages.Movies.CreateModel

@{
    ViewData["Title"] = "Create a new Movie";
}

<h2>Create a new Movie</h2>

<h4>Movie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Movie.Name" class="control-label"></label>
                <input asp-for="Movie.Name" class="form-control" />
                <span asp-validation-for="Movie.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie.Budget" class="control-label"></label>
                <input asp-for="Movie.Budget" class="form-control" />
                <span asp-validation-for="Movie.Budget" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie.BOCollection" class="control-label"></label>
                <input asp-for="Movie.BOCollection" class="form-control" />
                <span asp-validation-for="Movie.BOCollection" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie.Rating" class="control-label"></label>
                <input asp-for="Movie.Rating" class="form-control" />
                <span asp-validation-for="Movie.Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie.DateofRelease" class="control-label"></label>
                <input asp-for="Movie.DateofRelease" class="form-control" />
                <span asp-validation-for="Movie.DateofRelease" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Movie.Isrecommended" /> @Html.DisplayNameFor(model => model.Movie.Isrecommended))
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Movie.DateLastPlayed" class="control-label"></label>
                <input asp-for="Movie.DateLastPlayed" class="form-control" />
                <span asp-validation-for="Movie.DateLastPlayed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie.ProducerId" class="control-label"></label>
                <select asp-for="Movie.ProducerId" class ="form-control" asp-items="ViewBag.ProducerId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Movie.StudioId" class="control-label"></label>
                <select asp-for="Movie.StudioId" class ="form-control" asp-items="ViewBag.StudioId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Movie.AlbumId" class="control-label"></label>
                <select asp-for="Movie.AlbumId" class ="form-control" asp-items="ViewBag.AlbumId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
