@page
@model StudioLookupModel
@{
}

<h3>Studio Lookup</h3>

 <div class="container">
        <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    Movie
                </th>
                <th>
                    Studio
                </th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.Movies) {
            <tr>
                <td>
                     @item.Name
                </td>   
                <td>
                    @item.Studio.Name
                </td>  
            </tr>
            }
            </tbody>
        </table>
    </div>