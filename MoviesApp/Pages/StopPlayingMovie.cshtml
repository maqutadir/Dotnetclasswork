@page
@model StopPlayingMovieModel
@{
    ViewData["Title"] = "Update movie";
}

<h2>Stop playing movie</h2>

<div class="row">
    <div class="col-md-6 col-md-offset-3">

        <form method="post" style="margin-top: 50px;">
            

            <div class="form-group">
                <label class="control-label">Movie Name</label>
                <div>
                    <p class="form-control-static">@Model.Movie.Name</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label">Date Of Release</label>
                <div>
                    <p class="form-control-static">@Model.Movie.DateofRelease.ToString("MM-dd-yyyy")</p>
                </div>
            </div>

            @if(Model.Movie.IsCurrentlyRunning) {
                
                <input type="hidden" asp-for="StopPlaying.MovieId" />

                <div class="form-group">
                    <label asp-for="StopPlaying.LastPlayed" class="control-label"></label>
                    <input asp-for="StopPlaying.LastPlayed" class="form-control" />
                    <span asp-validation-for="StopPlaying.LastPlayed" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Stop Playing Movie" class="btn btn-danger" />
                </div>
            } else {

                 <div class="form-group">
                    <label class="control-label">Date Last PLayed</label>
                    <div>
                        <p class="form-control-static">@Model.Movie.DateLastPlayed.Value.ToString("MM-dd-yyyy")</p>
                    </div>
                </div>

                <div class="alert alert-warning">
                    <p>This movie is no longer playing in theatres</p>
                </div>
            }
        </form>

    </div>
</div>
