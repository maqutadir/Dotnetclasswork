@page
@model MoviesApp.Pages.Albums.IndexModel

@{
    ViewData["Title"] = "List of soundtracks";
}

<h2>List of soundtracks</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Album[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Album[0].MusicDirector)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Album[0].Length)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Album[0].Featuring)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Album[0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Album[0].Artist)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Album[0].DateOfRecording)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Album) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MusicDirector)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Length)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Featuring)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Artist)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfRecording)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
