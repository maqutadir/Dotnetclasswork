}

<h2>List of good movies</h2>

<p>
    
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GoodMovie[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GoodMovie[0].Producer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GoodMovie[0].Studio)
            </th>
            <th></th>
        </tr>
