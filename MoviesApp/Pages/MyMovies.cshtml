@page
@model MyMoviesModel
@{
    ViewData["Title"] = "Movie Info";
}



<h1>Movie Name</h1>
<h2>@Model.Movie.Name</h2>
<div class="row">
    
    <div class="col-md-6">
        <h3>Movie Details</h3>
        <dl>
            <dd>Budget</dd>
            <dt>@Model.Movie.Budget</dt>
            <dd>Box-Office Collection</dd>
            <dt>@Model.Movie.BOCollection</dt>
            
    
            <dd>Rating</dd>
            <dt>@Model.Movie.Rating</dt>
            <dd>Date Of Release</dd>
            <dt>@Model.Movie.DateofRelease</dt>
           
            <dd>Is it recommended</dd>
            <dt>@Model.Movie.Isrecommended</dt>
            <dd>Where was it shot?</dd>
            <dt>@Model.Movie.Studio.Name</dt>
            <dd>Which Album does it contain?</dd>
            <dt>@Model.Movie.Album.Name</dt>
        </dl>
        

</div>
