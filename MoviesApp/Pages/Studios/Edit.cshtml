@page
@model MoviesApp.Pages.Studios.EditModel

@{
    ViewData["Title"] = "Make changes to this studio";
}

<h2>Make changes to this studio</h2>

<h4>Studio</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Studio.Id" />
            <div class="form-group">
                <label asp-for="Studio.Name" class="control-label"></label>
                <input asp-for="Studio.Name" class="form-control" />
                <span asp-validation-for="Studio.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Studio.Location" class="control-label"></label>
                <input asp-for="Studio.Location" class="form-control" />
                <span asp-validation-for="Studio.Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Studio.FoundedIn" class="control-label"></label>
                <input asp-for="Studio.FoundedIn" class="form-control" />
                <span asp-validation-for="Studio.FoundedIn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Studio.Area" class="control-label"></label>
                <input asp-for="Studio.Area" class="form-control" />
                <span asp-validation-for="Studio.Area" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Studio.NoOfMoviesShot" class="control-label"></label>
                <input asp-for="Studio.NoOfMoviesShot" class="form-control" />
                <span asp-validation-for="Studio.NoOfMoviesShot" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
